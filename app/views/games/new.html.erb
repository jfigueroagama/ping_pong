<h1>New Game</h1>

<div class="col-md-4 col-md-offset-3">
  <%= form_for(:game, url: games_path, method: :post, class: "form-horizontal center") do |f| %>

    <div class="form-group">
      <%= f.label :game_date, class: "col-sm-4 control-label" %>
      <%= f.date_select :game_date, class: "date form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :contender_id, class: "col-sm-4 control-label" %>
      <div class="col-sm-8">
        <%= f.collection_select(:contender_id, User.where.not(id: current_user.id), :id, :email, class: "form-control") %>
      </div>
    </div>

    </br></br>
    <div class="actions form-horizontal center">
        <%= f.submit class: "btn btn-primary" %>
    </div>
    <div class="actions form-horizontal center">
      <%= link_to 'cancel', games_path %>
    </div>
  <% end %>
</div>
