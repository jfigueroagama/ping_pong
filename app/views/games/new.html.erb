<h1>New Game</h1>

<div class="col-md-6 col-md-offset-3">
  <%= form_for(@game, html: {class: "form-horizontal center"}) do |f| %>

    <div class="form-group">
      <%= f.label :game_date, class: "col-sm-4 control-label" %>
      <%= f.date_select :game_date, class: "date form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :contender_id, class: "col-sm-4 control-label" %>
      <div class="col-sm-8">
        <%= f.collection_select :contender_id, current_user.contenders, :id, :to_s, class: "form-control" %>
      </div>
    </div>


    <div class="actions">
        <%= f.submit class: "btn btn-primary" %>
    </div>
    <div class="actions">
      <%= link_to 'cancel', games_path %>
    </div>
  <% end %>
</div>
